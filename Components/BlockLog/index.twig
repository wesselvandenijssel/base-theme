<flynt-component name="BlockLog" class="componentSpacing" {{ options.theme ? 'data-theme="' ~ options.theme ~ '"' }}>
	<div class="container">

		<div class="wrapper">
			<div class="content" data-size="{{ options.size }}" data-align="{{ options.align }}" data-text-align="{{ options.textAlign }}">
				{{ contentHtml|e('wp_kses_post') }}
			</div>

			{% if show_filter %}
				<div class="filter">
					<div class="filter__date">
						<label for="datepicker">Selecteer datum vanaf:</label>
						<input type="date" id="datepicker">
					</div>

					<div class="filter__search">
						<label for="search">Zoek op titel:</label>
						<input type="text" id="search">
					</div>
				</div>
			{% endif %}

			<div class="grid">
				{% for post in log %}
					<a class="item-card" href={{post.permalink}} data-date={{post.date}}>

						{{post.image}}

						<div class="item-card__content">

							<div class="item-card__wrapper">
								<div class="item-card__date">
									{{post.date}}
								</div>

								<div class="item-card__title">
									{{post.title}}
								</div>
							</div>

							<span class="item-card__button btn btn--tertiary"></span>
						</div>

					</a>
				{% endfor %}
			</div>


		</div>
	</div>
</flynt-component>
